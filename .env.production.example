# GatorEx Production Environment Configuration with Turso

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://app.gatorex.shop"
NEXTAUTH_URL="https://app.gatorex.shop"
NEXTAUTH_SECRET="your-production-secret-key"
CRON_SECRET="your-production-cron-secret"

# =============================================================================
# DATABASE CONFIGURATION - TURSO
# =============================================================================
# Replace with your actual Turso database URL and auth token
DATABASE_URL="libsql://gatorex-prod-[your-org].turso.io"
TURSO_AUTH_TOKEN="your-turso-auth-token"

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION
# =============================================================================
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_BOT_NUMBER="your-bot-number"
WHATSAPP_VERIFY_TOKEN="your-verify-token"

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_PROVIDER="cloudinary"
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_PROVIDER="gmail"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="5"
EMAIL_RATE_LIMIT_MAX="3"

# =============================================================================
# DEBUGGING & MONITORING
# =============================================================================
DEBUG="false"
VERBOSE_LOGGING="false"