# Simple Email Setup (Optional - works without this in development)
GMAIL_USER="your-email@gmail.com"
GMAIL_PASS="your-gmail-app-password"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database (Required for production)
DATABASE_URL="postgresql://username:password@localhost:5432/gatorex"

# WhatsApp Business API (Required for bot functionality)
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token"
WHATSAPP_PHONE_NUMBER_ID="your_whatsapp_phone_number_id"
WHATSAPP_VERIFY_TOKEN="your_verify_token"
WHATSAPP_BOT_NUMBER="1234567890"

# OpenAI (Optional - for AI suggestions, fallback to keyword matching)
OPENAI_API_KEY="your_openai_api_key"

# Storage Configuration (Choose one)
STORAGE_PROVIDER="local" # Options: local, cloudinary, s3

# Cloudinary (if using cloudinary storage)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# AWS S3 (if using s3 storage)
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="gatorex-media"